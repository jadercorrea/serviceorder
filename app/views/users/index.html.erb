<table class="tab_user">
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Função</th>
    <th>Empresa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class=<%=cycle('even', 'odd')%>>
    <td class="user_nome"><%= user.name %></td>
    <td class="user_email"><%= user.email %></td>
    <td class="user_role"><%= user.role.name %></td>
    <td class="user_client"><%= user.client_name %></td>
    <td class="image"><%= link_to image_tag('icon_show.png', :size => '20x20'), user %></td>
    <td class="image"><%= link_to image_tag('icon_edit.png', :size => '20x20'), edit_user_path(user), id: "user_#{user.id}" %></td>
    <td class="image"><%= link_to image_tag('icon_destroy.png', :size => '20x20'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

