<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr class=<%=cycle('even', 'odd')%>>
    <td class="cliente"><%= client.name %></td>
    <td><%= link_to image_tag('icon_show.png', :size => '20x20', :title => 'Mostrar'), client %></td>
    <td><%= link_to image_tag('icon_edit.png', :size => '20x20', :title => 'Editar'), edit_client_path(client) %></td>
    <td><%= link_to image_tag('icon_destroy.png', :size => '20x20', :title => 'Deletar'), client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

