<table>
  <tr>
    <th>Client</th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.client.name %></td>
    <td><%= t("status.#{ticket.status}") %></td>
    <td><%= link_to image_tag('icon_edit.png', :size => '20x20'), edit_ticket_path(ticket), id: "edit_ticket" %></td>
    <td><%= link_to image_tag('icon_destroy.png', :size => '20x20'), ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

